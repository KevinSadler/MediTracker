@model MediTracker.Models.Entry

@{
    ViewData["Title"] = "Details";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/EntryDetails.css" rel="stylesheet" />
</head>
<body>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.dateString)
            </dd>
            @if (Model.EntrySymptoms.Count > 0)
            {
                <dt class="col-sm-2">
                    Symptoms
                </dt>
                <ul class="col-sm-10">
                    @foreach (var s in Model.EntrySymptoms)
                    {
                        <li>
                            @s.Symptom.Title
                        </li>
                    }
                </ul>
            }

            @if (Model.Notes != null)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Notes)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Notes)
                </dd>
            }
        </dl>
    </div>
    <form asp-controller="Images" asp-action="Create">
        <input type="hidden" asp-for="EntryId">
        <button class="imgButton" type="submit">Add Image</button>
    </form>
    <div class="imgContainer">
    @if (Model.Images.Count > 0)
    {

        foreach (var img in Model.Images)
        {
            <img id="entryIMG" src="~/uploads/@img.ImgName" alt="MyImage">
            <br>
        }
    }
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.EntryId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>