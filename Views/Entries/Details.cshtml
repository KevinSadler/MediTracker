@model MediTracker.Models.Entry

@{
    ViewData["Title"] = "Details";
}


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dateString)
        </dd>
        @if (Model.EntrySymptoms.Count > 0)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EntrySymptoms)
            </dt>
            <ul class="col-sm-10">
                @foreach (var s in Model.EntrySymptoms)
                {
                    <li>
                        @s.Symptom.Title
                    </li>
                }
            </ul>
        }
    
        @if (Model.Notes != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Notes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notes)
            </dd>
        }
    </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.EntryId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
