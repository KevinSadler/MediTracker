@model MediTracker.Models.Symptom

@{
    ViewData["Title"] = "Delete";
}

<h2>Attention! Deleting this symptom will delete all occurences of it from your Medical Journal</h2>
<br>
<h4>Are you SURE you want to delete this symptom?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SymptomId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
