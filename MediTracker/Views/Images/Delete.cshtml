@model MediTracker.Models.Image

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/EntryDetails.css" rel="stylesheet" />
</head>
<body>
    <h3>Do you want to remove this image from your entry?</h3>
    <div>
        <img id="entryIMG" src="~/uploads/@Model.ImgName">

        <form asp-action="Delete">
            <input type="hidden" asp-for="ImageId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="Entries" asp-action="Details" asp-route-id="@Model.EntryId">Cancel</a>
        </form>
    </div>
</body>
</html>