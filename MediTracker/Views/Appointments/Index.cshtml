@model IEnumerable<MediTracker.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h4>Upcoming Appointments</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="previous-apps-button">
    <a asp-action="PreviousAppointments">View Previous Appointments</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.AppointmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
