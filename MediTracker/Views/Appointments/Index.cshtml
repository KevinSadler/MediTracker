@model IEnumerable<MediTracker.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h4>Upcoming Appointments</h4>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<form class="create-btn-form">
    <input asp-controller="Appointments" asp-action="create" type="submit" value="Add Appointment" class="btn create-btn" style="background-color:blue; color:white" />
</form>

@*<div class="previous-apps-button">
    <a asp-action="PreviousAppointments">View Previous Appointments</a>
</div>*@

<form class="create-btn-form">
    <input asp-controller="Appointments" asp-action="PreviousAppointments" type="submit" value="View Previous Appointments" class="btn create-btn" style="background-color:dimgrey; color:white" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.AppointmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
